pipeline {
    agent any

    tools {
        jdk 'jdk-17'
        maven 'maven 3.9.9'
    }

    environment {
        REPORT_DIR = "reports"
        ALLURE_RESULTS = "target/allure-results"
    }

    stages {

        stage('Checkout Code') {
            steps {
                echo '🔄 Cloning repository...'
                git branch: 'main',
                    url: 'https://github.com/anitha233/JupiterToysAutomation.git',
                    credentialsId: 'github-token'
            }
        }

        stage('Run Selenium Tests') {
            steps {
                echo '🧪 Running all Selenium test cases (headless)...'
                sh 'mvn clean test -Dheadless=true'
            }
        }

        stage('Archive Screenshots') {
            steps {
                echo '📸 Archiving screenshots from failed tests...'
                archiveArtifacts artifacts: '**/reports/*.png', allowEmptyArchive: true
            }
        }

        stage('Generate Allure Report') {
            steps {
                echo '📊 Generating Allure report...'

                // Debug info to confirm results exist
                sh 'echo "Listing allure-results contents:"'
                sh 'ls -la target || true'
                sh 'ls -la target/allure-results || true'

                // Generate Allure Report
                allure([
                    includeProperties: false,
                    jdk: '',
                    results: [[path: 'target/allure-results']]
                ])
            }
        }
    }

    post {
        always {
            echo '🧹 Cleaning workspace...'
            cleanWs()
        }

        success {
            echo '✅ All tests passed successfully!'
        }

        failure {
            echo '❌ Some tests failed! Check console output and archived screenshots.'
        }
    }
}
