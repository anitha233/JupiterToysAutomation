pipeline {
    agent any

    tools {
        jdk 'JDK17'      
        maven 'Maven 3.9.9'
    }

    environment {
        REPORT_DIR = "reports"
    }

    stages {

        stage('Checkout Code') {
            steps {
                echo 'Cloning repository...'
                checkout scm
            }
        }

        stage('Run Selenium Tests') {
            steps {
                echo 'Running all Selenium test cases...'
                // Run Maven test
                sh 'mvn clean test'
            }
        }
          

        stage('Archive Screenshots') {
            steps {
                echo 'Archiving screenshots from failed tests...'
                archiveArtifacts artifacts: '**/reports/*.png', allowEmptyArchive: true
            }
            
             stage('Generate Allure Report') {
            steps {
                echo 'Generating Allure report...'
                allure([
                    includeProperties: false,
                    jdk: '',
                    results: [[path: "${ALLURE_RESULTS}"]]
                ])
        }
    }

    post {
        always {
            echo 'Cleaning workspace...'
            cleanWs()
        }

        success {
            echo '✅ All tests passed successfully!'
        }

        failure {
            echo '❌ Some tests failed! Check console output and archived screenshots.'
        }
    }
}
